<div class="contents row">
  <div class="container">
    <h1 class="page-title">Log in</h1>

    <% flash.each do |name, msg| %>
      <div class="alert <%= name == :notice ? "alert-info" : "alert-danger" %>">
        <%= msg %>
      </div>
    <% end %>

    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :remember_me, "ログイン情報を保存する" %><br />
          <%= f.check_box :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "button" %>
        <%= link_to "戻る", root_path, class: "button back-button" %>
      </div>   
    <% end %>
  </div>
</div>

